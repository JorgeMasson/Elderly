<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/foto_contacto"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitEnd"
            android:scaleX="2"
            android:scaleY="2"
            android:src="@drawable/foto" />

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hebelia Martínez Rocha"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_accion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="compartió una foto nueva"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_publicacion"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleX="2.5"
        android:scaleY="1.6"
        android:src="@drawable/publicacion01" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_corazon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconocorazon48x48" />

        <Button
            android:id="@+id/btn_comentar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_redondo"
            android:text="comentar"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/img_compartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconocompartir48" />



    </LinearLayout>

</LinearLayout>